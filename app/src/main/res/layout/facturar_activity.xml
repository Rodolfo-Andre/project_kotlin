<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8f9">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="409dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:srcCompat="@drawable/top_background_gradiunt" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/top_back_ground_mora" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="141dp"
                android:layout_height="93dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintVertical_bias="0.42"
                app:srcCompat="@drawable/local_img" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Facturar"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView6" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comanda"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView40"
                app:layout_constraintTop_toBottomOf="@+id/textView40" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="250dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Caja :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="-31dp" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spnCajasP"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/style_spinner" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:text="Comprobante :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="2dp" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <Spinner
                    android:id="@+id/spnTipoComprobante"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/style_spinner"
                    android:translationX="-33dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comanda :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="12dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edtIdComanda"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/edittext_background"
                    android:drawableEnd="@drawable/ubi_m28"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:translationX="5dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="-28dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <Spinner
                    android:id="@+id/spnMetPagoF"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/style_spinner"
                    android:translationX="-1dp"
                    app:layout_constraintEnd_toEndOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empleado :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="13dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edtEmpleadoNombreFacturar"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/edittext_background"

                    android:drawableEnd="@drawable/telfo28"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:translationX="5dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="2dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edtClienteF"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/edittext_background"

                    android:drawableEnd="@drawable/telfo28"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:translationX="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IGV :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="-10dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edtIGV"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/edittext_background"

                    android:drawableEnd="@drawable/telfo28"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:translationX="27dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SubTotal :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="8dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edtSubTotal"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/edittext_background"

                    android:drawableEnd="@drawable/telfo28"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:translationX="9dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descuento :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="12dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edtDescuento"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/edittext_background"

                    android:drawableEnd="@drawable/telfo28"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:translationX="3dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total :"
                    android:textColor="#41186E"
                    android:textSize="16dp"
                    android:translationX="-9dp" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edtPrecioTotal"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/edittext_background"

                    android:drawableEnd="@drawable/telfo28"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="#BDBDBD"
                    android:textSize="18dp"
                    android:translationX="24dp" />


            </LinearLayout>


            <View
                android:id="@+id/divider22"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent" />




            <View
                android:id="@+id/divider23"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/BtnFacturarF"
                    style="@android:style/Widget.Button"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_background"
                    android:text="Facturar"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.218"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.961" />


                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/BtnCancelar"
                    style="@android:style/Widget.Button"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/style_btn_el"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.772"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.963" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>